{
  "private": true,
  "name": "myl-next",
  "version": "1.1.0",
  "description": "",
  "main": "./out/main/index.js",
  "scripts": {
    "start": "electron-vite  preview",
    "prebuild": "electron-vite build",
    "dev": "electron-vite dev",
    "bk.dev": "gulp dev",
    "build-main": "esbuild src/index.ts --platform=node --bundle --external:electron --outfile=\"./app/index.js\"",
    "build-main-dev": "npm run build-main -- --watch",
    "build-main-prod": "npm run build-main -- --minify",
    "build": "npm run typecheck && electron-vite build",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config"
  },
  "author": "yoshiyuki mizogami",
  "license": "MIT",
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@rushstack/eslint-patch": "^1.3.0",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "css-loader": "^6.7.4",
    "del": "^7.0.0",
    "electron": "^24.4.0",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.22",
    "esbuild": "^0.17.19",
    "esbuild-loader": "^3.0.1",
    "eslint": "^8.41.0",
    "eslint-plugin-vue": "^9.14.1",
    "less": "^4.1.3",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.9",
    "vue": "^3.3.4",
    "vue-devtools": "^5.1.4",
    "vue-loader": "^17.1.1",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.7.14",
    "vue-tsc": "^1.6.5"
  },
  "build": {
    "appId": "yoshiyuki.mizogami.mylnext",
    "productName": "MylNext",
    "publish": null,
    "directories": {
      "app": "app",
      "output": "dist"
    },
    "copyright": "Copyright 2018 Yoshiyuki Mizogami",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "icon": "app/imgs/icon.icns"
    },
    "dmg": {
      "icon": "app/imgs/icon.icns",
      "title": "MylNext"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "app/imgs/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "shortcutName": "MylNext",
      "installerIcon": "app/imgs/icon.ico",
      "uninstallerIcon": "app/imgs/icon.ico"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "dexie": "^3.2.3",
    "electron-updater": "^5.3.0",
    "mitt": "^3.0.0",
    "path-browserify": "^1.0.1",
    "pinia": "^2.1.3",
    "vuedraggable": "^4.1.0"
  }
}
